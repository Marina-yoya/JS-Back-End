<section id='viewAddhotel'>
	<h2>Edit existing hotel</h2>
	<form method='POST' action='/hotel/delete/{{hotelData._id}}' id='formAddhotel'>
		<label for='hotel'>Hotel name:</label>
		<input type='text' id='hotel' name='name' disabled='' value='{{hotelData.name}}' />
		<label for='city'>City:</label>
		<input type='text' id='city' name='city' disabled='' value='{{hotelData.city}}' />
		<label for='free-rooms'>Free rooms:</label>
		<input type='number' id='free-rooms' name='rooms' disabled='' value='{{hotelData.rooms}}' />
		<label for='imgUrl'>Image:</label>
		<input type='text' id='imgUrl' name='imageUrl' disabled='' value='{{hotelData.imageUrl}}' />

		<input type='submit' class='create' value='Delete' />
	</form>
</section>