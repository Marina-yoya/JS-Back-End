<html lang='en'>

	<head>
		<meta charset='UTF-8' />
		<title>BookingUni</title>
		<link rel='stylesheet' href='/static/styles/style.css' />
	</head>

	<body>

		<div id='container'>

			{{#if errors}}

				<div class='notification errorBox'>
					{{#each errors}}
						<p><span>{{this}}</span></p>
					{{/each}}
				</div>

			{{/if}}

			<nav>
				{{#if user}}
					<div class='left-container'>
						<ul>
							<li><a href='/'>Home</a></li>
							<li><a href='/hotel/create'>Add +</a></li>
						</ul>
					</div>
					<div class='right-container'>
						<a href='/auth/profile/{{user._id}}' class='log-out'>{{user.username}}</a>
						<a href='/auth/logout' class='log-out'>Logout</a>
					</div>
				{{else}}
					<div class='left-container'>
						<ul>
							<li><a href='/'>Home</a></li>
							<li><a href='/auth/login'>Login</a></li>
							<li><a href='/auth/register'>Register</a></li>
						</ul>
					</div>
				{{/if}}
			</nav>

			{{{body}}}

		</div>

		<footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
	</body>

</html>