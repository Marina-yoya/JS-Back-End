<form class='theater-form' action='/plays/delete/{{playData._id}}' method='POST'>
	<h1>Delete Theater</h1>
	<div>
		<label for='title'>Title:</label>
		<input type='text' name='title' value='{{playData.title}}' disabled='' />
	</div>
	<div>
		<label for='description'>Description:</label>
		<textarea name='description' disabled=''>{{playData.description}}</textarea>
	</div>
	<div>
		<label for='imageUrl'>Image url:</label>
		<input type='text' name='imageUrl' value='{{playData.imageUrl}}' disabled='' />
	</div>
	<div class='check'>
		<input type='checkbox' name='public' id='check-box' {{#if playData.public}} checked {{/if}} disabled=''  />
		<label for='check-box'>Public</label>
	</div>
	<button class='btn' type='submit'>Delete</button>
</form>