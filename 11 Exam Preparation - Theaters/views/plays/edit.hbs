<form class='theater-form' action='/plays/edit/{{playData._id}}' method='POST'>
	<h1>Edit Play</h1>
	<div>
		<label for='title'>Title:</label>
		<input type='text' name='title' value='{{playData.title}}' />
	</div>
	<div>
		<label for='description'>Description:</label>
		<textarea name='description'>{{playData.description}}</textarea>
	</div>
	<div>
		<label for='imageUrl'>Image url:</label>
		<input type='text' name='imageUrl' value='{{playData.imageUrl}}' />
	</div>
	<div class='check'>
		<input type='checkbox' name='public' id='check-box' {{#if playData.public}} checked {{/if}}/>
		<label for='check-box'>Public</label>
	</div>
	<button class='btn' type='submit'>Save Play</button>
</form>