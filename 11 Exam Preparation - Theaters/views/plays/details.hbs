<div class='container'>
	{{#with playData}}
		<section class='details'>
			<h1>Title: {{title}}</h1>
			<div>
				<img src='{{imageUrl}}' />
			</div>
		</section>

		<section class='details'>
			<h3>Description</h3>
			<p>
				{{description}}
			</p>
			<div class='buttons'>
				{{#if isAuthor}}
					<a class='btn edit' href='/plays/edit/{{_id}}'>Edit</a>
					<a class='btn delete' href='/plays/delete/{{_id}}'>Delete</a>
				{{else}}
					{{#if isLiked}}
						<span class='liked'>You have already liked this play!</span>
					{{else}}
						<a class='btn like' href='/plays/like/{{_id}}'>Like</a>
					{{/if}}
				{{/if}}
			</div>
		</section>
	{{/with}}
</div>