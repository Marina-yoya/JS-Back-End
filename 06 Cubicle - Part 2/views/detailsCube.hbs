{{#with cube}}
  <h1>{{name}}</h1>
  <img class='cube' src='{{imageUrl}}' />
  <div class='details'>
    <p><span>Description:</span>
      {{description}}
    </p>
    <p><span>Difficulty level:</span> {{difficulty}} </p>
    <div class="btns-container">
    <a class='btn' href='/cube/edit/{{_id}}'>Edit</a>
    <a class='btn' href='/cube/delete/{{_id}}'>Delete</a>
    <a class='btn' href='/cube/details/{{_id}}/attachAccessories'>Attach accessories</a>
    <a class='btn' href='/'>Back</a>
    </div>
  </div>

  <h2>Accessories</h2>
  <div class='accessories details'>
	  {{#each accessories}}
			{{> accessory}}
      {{else}}
      <h3 class='italic'>This cube has no accessories yet...</h3>
	  {{/each}}
  </div>

  <h2>Comments:</h2>
  <div class='details'>
    <form action='/comment/create/{{_id}}' method='POST'>
      <label for='author'>Your name:</label>
      <input type='text' name='author' required='' />
      <label for='content'>Your comment:</label>
      <textarea name='content' required=''></textarea>
      <input style='margin: 5px;' type='submit' value='Post comment' />
    </form>

	 	{{#each comments}}
			{{> comment}}
		{{else}}
			<h3 class='italic'>No comments yet. Be the first to leave a comment!</h3>
		{{/each}}

  </div>
{{/with}}